#teach.modal.fade{"tabindex" => "-1", "role" => "dialog"}
  .modal-dialog
    .modal-content
      .modal-header
        %button.close{"data-dismiss" => "modal", "aria-label" => "Close" }
          %span{ "aria-hidden" => "true" } &times;
        %h3 Quiero EnseÃ±ar
      .modal-body
        - flash.each do |key, value|
          %h3.information
            = value
        = form_for @contact do |f|
          .form-group
            = f.label :target, 'Nombre y Apellido', class: 'control-label'
            = f.text_field :name, :required => true, class: 'form-control', placeholder: 'Nombre y Apellido*'
          .form-group
            = f.label :target, 'Disciplina', class: 'control-label'
            = f.text_field :discipline, :required => true, class: 'form-control', placeholder: 'Disciplina*'
          .form-group
            = f.label :target, 'E-Mail', class: 'control-label'
            = f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'E-Mail *'
          .form-group
            = f.label :target, 'Comentarios', class: 'control-label'
            = f.text_area(:message, rows: 10, class: 'form-control', placeholder: 'Comentarios *')
          .form-group.no-margin
            = f.submit "Contratar", class: 'btn btn-success'
